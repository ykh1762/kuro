   <select id="getAppListByEmpNo" resultMap="appIng">
      /*kr.or.ddit.mapper.AppMapper.getAppListByEmpNo*/
      SELECT
	            A.APP_CODE         /*결재코드*/
	         , A.EMP_NO         /*기안사원번호*/
	         , A.APF_CODE         /*결재양식코드*/
	         , A.APP_YEAR         /*보존연한*/
	         , A.APP_DATE         /*작성일*/
	         , A.APP_REPDATE      /*상신일*/
	         , A.APP_STATUS      /*결재상태코드*/
	         , A.APP_URGENT      /*긴급여부*/
	         , A.APP_COMMENT      /*기안의견*/
	         , A.APP_CONTENT      /*내용*/
	         , A.APP_TITLE         /*제목*/
	         , A.APP_REF         /*참조기안번호*/
	         , B.APL_RESULT		/*결재상태*/
      	FROM APPROVAL A 
        LEFT OUTER JOIN (SELECT 
                               APL_RESULT
                             , APP_CODE
                           FROM APLINE
                           WHERE
                              APL_RESULT = (SELECT MAX(APL_RESULT)
                        						FROM APLINE ))B
         ON B.APP_CODE = A.APP_CODE 
          WHERE
         		A.EMP_NO = #{empNo}
         		AND A.APP_STATUS = '0' 
        
   </select>
   
<!--    결재완료 문서 리스트 -->
