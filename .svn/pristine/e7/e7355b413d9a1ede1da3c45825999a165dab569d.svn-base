   <select id="selectVacationAppForm" parameterType="AppVO" resultMap="appMap">
   /* kr.or.ddit.mapper.AppMapper.selectVacationAppForm */
   		SELECT
   			A.VAC_CODE      	/*휴가신청서코드*/
         	, A.APP_CODE      	/*결재코드*/
         	, A.VAC_START      	/*시작일*/
         	, A.VAC_END      	/*종료일*/
         	, A.VAC_TYPE      	/*휴가종류*/
         	, A.VAC_CONTENT   	/*사유*/
         	, A.VAC_TEL      	/*긴급연락처*/
         	, A.VAC_DAY      	/*사용일수*/
            , B.APP_DATE		/*작성일자*/
            , B.EMP_NAME		/*작성자이름*/
            , B.EMP_PV			/*잔여연차*/
            , B.EMP_NO			/*결재자 번호*/
            , E.EMP_NAME AS APL_NAME	/*결재자이름*/
            , B.APL_NUM			/*결재순번*/
            , B.APL_RESULT
        FROM VACATION A 
        LEFT OUTER JOIN (SELECT 
                            C.APP_DATE
                            , C.APP_CODE
                            , C.APF_CODE
                            , D.EMP_NAME
                            , D.EMP_PV
                            , E.EMP_NO
                            , E.APL_NUM
                            , E.APL_RESULT
                        FROM APPROVAL C
                        LEFT OUTER JOIN EMPLOYEE D
                            ON C.EMP_NO = D.EMP_NO
                        LEFT OUTER JOIN APLINE E
                            ON C.APP_CODE = E.APP_CODE
                        WHERE
                            C.EMP_NO = #{empNo}) B 
            ON A.APP_CODE = B.APP_CODE
        LEFT OUTER JOIN EMPLOYEE E
        	ON B.EMP_NO = E.EMP_NO
        WHERE
         A.APP_CODE = #{appCode}
   </select>
   
